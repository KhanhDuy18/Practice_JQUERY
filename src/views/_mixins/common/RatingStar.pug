mixin RatingStar(value, prefix)
  <fieldset class="rating"  data-rating-star data-product-rating=!{value}>
      <input type="radio" name=!{`${prefix}-star`} value="5" class="fa"><label class="full" for="star5" title="5"></label>
      <input type="radio" name=!{`${prefix}-star`} value="4.5" class="fa"><label class="half" for="star4half" title="4.5"></label>
      <input type="radio" name=!{`${prefix}-star`} value="4" class="fa" checked><label class="full" for="star4" title="4" ></label>
      <input type="radio" name=!{`${prefix}-star`} value="3.5" class="fa"><label class="half" for="star3half" title="3.5"></label>
      <input type="radio" name=!{`${prefix}-star`} value="3" class="fa"><label class="full" for="star3" title="3"></label>
      <input type="radio" name=!{`${prefix}-star`} value="2.5" class="fa"><label class="half" for="star2half" title="2.5"></label>
      <input type="radio" name=!{`${prefix}-star`} value="2" class="fa"><label class="full" for="star2" title="2"></label>
      <input type="radio" name=!{`${prefix}-star`} value="1.5" class="fa"><label class="half" for="star1half" title="1.5"></label>
      <input type="radio" name=!{`${prefix}-star`} value="1" class="fa"><label class="full" for="star1" title="1"></label>
      <input type="radio" name=!{`${prefix}-star`} value="0.5" class="fa"><label class="half" for="starhalf" title="0.5"></label>
  </fieldset>
